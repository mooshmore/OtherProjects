<Window x:Class="MenuTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu IsMainMenu="True"
          DockPanel.Dock="Top">
                <MenuItem Header="Bestand">
                    <MenuItem Header="Afsluiten" Command="{Binding AfsluitenCommand}"/>
                </MenuItem>
                <MenuItem Header="Beheer">
                    <MenuItem Header="Boeken" Command="{Binding BoekBeheerCommand}"/>
                    <MenuItem Header="Auteurs" Command="{Binding AuteurBeheerCommand}"/>
                    <MenuItem Header="Uitgevers" Command="{Binding UitgeverBeheerCommand}"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</Window>
